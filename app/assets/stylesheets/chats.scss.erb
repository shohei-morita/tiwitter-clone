.container {
  padding-top: 20px;
}

body {
  padding-top: 70px;
}

.navbar {
  min-height: 70px;
  margin-bottom: 20px;
  border: 1px solid transparent;
  background-color: #3366FF;
}

li a{
  margin-top:12px;
  font-size: 15px;
  color: white;
}

.wrapper {
  min-height: 100vh;
  position: relative;
}

footer {
  width: 100%;
  padding: 20px 0;
  background-color: #3366FF;
  text-align: center;
  position: absolute;
  bottom: 0;
}

footer p {
  padding-top: 2%;
  color: white;
}

.navbar-brand {
  margin-top: 10px;
  font-size: 30px;
  color: #ffffff;
}

.form-group textarea {
  resize: none;
}

.main {
  margin-top: 50px;
}

.operate-btns {
  float: right;
}

.operate-btn {
  float: left;
  padding: 5px;
  margin: 2px;
}

.confirm-btns {
  float: right;
}

.confirm-btn {
  float: left;
  padding: 5px;
  margin: 2px;
}

.edit-btns {
  float: right;
}

.edit-btn {
  float: left;
  padding: 5px;
  margin: 2px;
}

.post-btn {
  float: right;
  margin-top: 10px;
  padding: 5px;
}

.info-header {
  padding-bottom: 70px;
  padding-top: 70px;
  width: 100%;
  background-size: cover;
  background-image: url(<%= asset_path ('monitor.jpg') %>);
  background-attachment: fixed;
  position: relative;
  text-align: center;
}

.chatter-info {
  color: white;
  font-size: 50px;
  font-weight: bold;
}

.about {
  font-size: 15px;
  padding: 30px;
}

.about h1{
  padding-bottom: 40px;
}
